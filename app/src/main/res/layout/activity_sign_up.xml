<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SignUpActivity">


    <ImageView
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:id="@+id/icon_sign_up"
        app:srcCompat="@drawable/icons8_facebook_messenger_48px"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:contentDescription="TODO" />

    <ProgressBar
        android:id="@+id/progress_bar_sign_up"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="341dp"
        tools:layout_editor_absoluteX="181dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name_sign_up"
        android:layout_marginTop="35dp"
        android:hint="Name"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:inputType="text"
        android:autofillHints="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_email"
        android:layout_marginTop="16dp"
        android:hint="email"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pass_up"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:inputType="textPassword"/>

    <Button

        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Sign Up"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_btn"
        android:enabled="false"
        android:paddingTop="16dp"
        android:textColor="@color/state_text_color"
        />

</LinearLayout>